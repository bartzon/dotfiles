fpath=(~/.zsh/functions $fpath)

setopt prompt_subst
autoload -U ~/.zsh/functions/*(:t)
source ~/.zsh/functions/zsh-functions

umask 002

autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git
precmd() {
  vcs_info
}
zstyle ':vcs_info:git:*' check-for-changes true

export PS1='[$(hostname)]$(_jobscount) %n%~ '
export RPS1='$vcs_info_msg_0_'
export EDITOR=nvim

# nice colors on a black bg
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

bindkey -v

# bindkey '^R' history-incremental-search-backward

export LANG=C

export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border"
export FZF_TMUX_HEIGHT="40%"
export FZF_CTRL_R_OPTS="--preview 'echo {}' --preview-window down:3:hidden:wrap --bind '?:toggle-preview'"

zsh_add_plugin "zsh-users/zsh-autosuggestions"
zsh_add_plugin "zsh-users/zsh-syntax-highlighting"
zsh_add_plugin "hlissner/zsh-autopair"

autoload -U add-zsh-hook
load-local-conf() {
  source ~/.zsh/functions/dev_aliases.zsh
}
add-zsh-hook chpwd load-local-conf
source ~/.zsh/functions/dev_aliases.zsh

# Fix for fzf history search
__fzf_defaults() {
  echo "--height 40% --layout=reverse --border $1 $2"
}
