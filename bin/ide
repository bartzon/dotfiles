#!/bin/zsh

SESSION=$*

if [ -z $SESSION ]; then
  echo "This script requires an argument"
  exit 1
fi

osascript -e "tell application \"System Events\" to tell process \"kitty\"
  set value of attribute \"AXFullScreen\" of window 1 to true
end tell"


# DIR=`ls -d ~/code/* ~/src/github.com/Shopify/* | sort | fzf`

dev cd $SESSION
tmux new-session -d -s $SESSION -n vim 'nvim -c "call VimuxOpenRunner()"'
tmux attach -t $SESSION

